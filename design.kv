#:kivy 2.0

<WeatherCard>:
    orientation: 'vertical'
    padding: 20
    spacing: 8
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 25
        
        Label:
            text: f"[b]{root.title_text}[/b]"
            markup: True
            font_size: '16sp'
            halign: 'left'
            valign: 'middle'
            color: 0.2, 0.2, 0.2, 1
            text_size: self.size
    
    Label:
        text: f"[size=36sp][b]{root.value_text}[/b][/size]"
        markup: True
        size_hint_y: None
        height: 60
        halign: 'center'
        valign: 'middle'
        color: root.value_color
    
    Label:
        text: root.subtitle_text
        markup: True
        font_size: '12sp'
        size_hint_y: None
        height: 20
        halign: 'center'
        valign: 'middle'
        color: 0.5, 0.5, 0.5, 1

<WeatherParamCard@BoxLayout>:
    param_title: param_title
    param_value: param_value
    param_unit: param_unit
    param_status: param_status
    
    orientation: 'vertical'
    padding: [15, 8, 15, 15]
    spacing: 5
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
    
    Label:
        id: param_title
        text: "Parameter"
        font_size: '22sp'
        bold: True
        size_hint_y: None
        height: 26
        halign: 'left'
        valign: 'middle'
        color: 0.25, 0.6, 1, 1
    
    Label:
        id: param_value
        text: "0.0 unit"
        font_size: '28sp'  # ← ลดขนาดเล็กน้อยเพราะมี unit ด้วย
        bold: True
        size_hint_y: None
        height: 50
        halign: 'center'
        valign: 'middle'
        color: 0.2, 0.2, 0.2, 1
    
    Label:
        id: param_unit
        text: ""
        size_hint_y: None
        height: 0  # ← ซ่อน label นี้
        opacity: 0
    
    Label:
        id: param_status
        text: "Status"
        font_size: '13sp'
        size_hint_y: None
        height: 25
        halign: 'center'
        valign: 'middle'
        color: 0.4, 0.4, 0.4, 1
        
<FormContentFrame>:
    orientation: 'vertical'
    padding: [30, 20, 30, 20]
    spacing: 15
    size_hint_y: None
    size_hint_x: None 
    width: 700
    height: 600
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]

    BoxLayout:
        orientation: 'vertical'
        spacing: 8
        size_hint_y: None
        height: 90
        
        Label:
            text: "Location"
            size_hint_y: None
            height: 30
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '15sp'
            color: 0.2, 0.2, 0.2, 1
            bold: True
        
        DarkTextInput:
            id: location_input
            hint_text: "City, Country"
            size_hint_y: None
            height: 50
            multiline: False
            font_size: '16sp'
            padding: [20, (self.height - self.line_height) / 2]
            foreground_color: 0.15, 0.15, 0.15, 1
            cursor_color: 0.25, 0.6, 1, 1
            hint_text_color: 0, 0, 0, 1
            background_normal: ''
            background_active: ''
            selection_color: 0.25, 0.6, 1, 0.3
            bold: False
            input_filter: lambda text, from_undo: text if all(ord(c) < 128 for c in text) else ''
            on_text: app.root.get_screen('main').on_location_input_change(self.text)
            canvas.before:
                Color:
                    rgba: 0.96, 0.96, 0.98, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]
                Color:
                    rgba: (0.25, 0.6, 1, 1) if self.focus else (0.88, 0.88, 0.90, 1)
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 12
                    width: 2 if self.focus else 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 8
        size_hint_y: None
        height: 90
        
        Label:
            text: "Date"
            size_hint_y: None
            height: 30
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '15sp'
            color: 0.2, 0.2, 0.2, 1
            bold: True
        
        DarkTextInput:
            id: date_input
            hint_text: "dd/mm/yyyy"
            multiline: False
            size_hint_y: None
            height: 50
            font_size: '16sp'
            padding: [20, (self.height - self.line_height) / 2]
            foreground_color: 0.2, 0.2, 0.2, 1
            cursor_color: 0.25, 0.6, 1, 1
            hint_text_color: 0.85, 0.85, 0.85, 1
            background_normal: ''
            background_active: ''
            selection_color: 0.25, 0.6, 1, 0.3
            bold: False
            canvas.before:
                Color:
                    rgba: 0.96, 0.96, 0.98, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]
                Color:
                    rgba: (0.25, 0.6, 1, 1) if self.focus else (0.88, 0.88, 0.90, 1)
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 12
                    width: 2 if self.focus else 1
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 8
        size_hint_y: None
        height: 200
    
        Label:
            text: "Optional Parameters (Select up to 2)"
            size_hint_y: None
            height: 30
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '14sp'
            color: 0.4, 0.4, 0.4, 1
        GridLayout:
            cols: 2
            spacing: 15
            size_hint_y: None
            height: 160
            padding: [15, 10]
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_humidity
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'RH2M')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Humidity"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_snowfall
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'SNOWFALL')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Snowfall"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_snow_depth
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'SNOW_DEPTH')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Snow Depth"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_wave_height
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'WAVE_HEIGHT')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Wave Height"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_ocean_current
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'OCEAN_CURRENT')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Ocean Current"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
        
                CheckBox:
                    id: cb_swell_period
                    size_hint: None, 1
                    width: 20
                    color: 0.25, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'SWELL_PERIOD')
        
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'center'
            
                    Label:
                        text: "Swell Period"
                        font_size: '14sp'
                        color: 0.3, 0.3, 0.3, 1
                        size_hint: None, None
                        size: self.texture_size
    
    Widget:
    
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        size_hint_y: None
        height: 70
        
        Button:
            id: start_button
            text: "Prediction"
            size_hint: None, None
            size: 280, 55
            font_size: '17sp'
            bold: True
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_release: app.root.get_screen('main').on_start_button_press()
            canvas.before:
                Color:
                    rgba: (0.25, 0.6, 1, 1) if self.state == 'normal' else (0.2, 0.5, 0.9, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]

<FormFrame>:
    orientation: 'vertical'
    spacing: 0
    
    FormContentFrame:
        id: form_content

<DescriptionScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 25

        Widget:
            size_hint_y: 0.15

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 120
            spacing: 10
            
            Label:
                text: "WHATWEATHER"
                font_size: '52sp'
                size_hint_y: None
                height: 60
                bold: True
                color: 0.25, 0.6, 1, 1
                halign: 'center'
                valign: 'middle'
            
            Label:
                text: "Weather Predict System"
                font_size: '20sp'
                size_hint_y: None
                height: 40
                color: 0.45, 0.45, 0.45, 1
                halign: 'center'
                valign: 'middle'
            
            Widget:
                size_hint_y: None
                height: 40

        Button:
            text: "GET STARTED"
            size_hint: None, None
            size: 250, 65
            pos_hint: {"center_x": 0.5}
            font_size: '20sp'
            bold: True
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_release: root.go_to_main()
            canvas.before:
                Color:
                    rgba: (0.25, 0.6, 1, 1) if self.state == 'normal' else (0.2, 0.5, 0.9, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]

        Widget:
            size_hint_y: 0.15

<MainFormScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        BoxLayout:
            size_hint_y: None
            height: 80
            orientation: 'vertical'
            spacing: 5
            
            Label:
                text: "WHATWEATHER"
                font_size: '60sp'
                bold: True
                color: 0.25, 0.6, 1, 1
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: 60
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 30
            
            Widget:
                size_hint_x: 0.15
            
            FormFrame:
                id: form_frame
                size_hint_x: 0.7
            
            Widget:
                size_hint_x: 0.15

<LoadingScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            size_hint_y: 0.35
        
        Label:
            text: "WHATWEATHER"
            font_size: '60sp'
            bold: True
            color: 0.25, 0.6, 1, 1
            size_hint_y: None
            height: 70
            halign: 'center'
            valign: 'middle'
        
        BoxLayout:
            size_hint_y: None
            height: 250
            padding: 20
            
            BoxLayout:
                size_hint_x: 0.3
            
            AsyncImage:
                source: 'loading.gif'
                size_hint: None, None
                size: 150, 150
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                anim_delay: 0.05
                allow_stretch: True
                keep_ratio: True
            
            BoxLayout:
                size_hint_x: 0.3
        
        Label:
            text: "Analyzing weather data...\nPlease wait"
            font_size: '18sp'
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 80
            halign: 'center'
            valign: 'middle'
        
        BoxLayout:
            size_hint_y: 0.35

<ResultScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: [20, 10, 20, 10]
            spacing: 15
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: "WHATWEATHER"
                font_size: '28sp'
                bold: True
                color: 0.2, 0.6, 1, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                size_hint_x: 0.5
            
            Widget:
                size_hint_x: 0.2
            
            Button:
                text: "New Predict" 
                size_hint: None, None
                size: 130, 45
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 0.2, 0.6, 1, 1
                font_size: '13sp'
                bold: True
                on_release: root.manager.current = "main"
                canvas.before:
                    Color:
                        rgba: (0.9, 0.9, 0.92, 1) if self.state == 'normal' else (0.75, 0.75, 0.77, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8]
            
            Button:
                text: "Download"
                size_hint: None, None
                size: 140, 45
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                font_size: '13sp'
                bold: True
                on_release: root.toggle_download_menu()
                canvas.before:
                    Color:
                        rgba: (0.2, 0.6, 1, 1) if self.state == 'normal' else (0.15, 0.5, 0.9, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8]
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                padding: [30, 20, 30, 30]
                size_hint_y: None
                height: self.minimum_height
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 110
                    spacing: 5
                    
                    Label:
                        text: "Location"
                        font_size: '14sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.4, 0.4, 0.4, 1
                    
                    Label:
                        id: location_value
                        text: ""
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 30
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    Label:
                        text: "Date"
                        font_size: '14sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.4, 0.4, 0.4, 1
                    
                    Label:
                        id: date_value
                        text: ""
                        font_size: '18sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.25, 0.6, 1, 1
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 300
                    padding: 15
                    spacing: 8
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.97, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [12]
                    
                    Label:
                        text: "Location"
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    BoxLayout:
                        id: map_box
                        canvas.before:
                            Color:
                                rgba: 0.9, 0.92, 0.95, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]
                
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 320
                    spacing: 15

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 15
                        padding: [20, 20, 20, 20]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # สีพื้นหลังกรอบใหญ่
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [15]
                    
                        # Summary Section
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: 0.48, None
                            height: 280
                            padding: [20, 20, 20, 20]
                            spacing: 10
                            canvas.before:
                                Color:
                                    rgba: 0.9, 0.92, 0.95, 0.65
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [12]
    
                            BoxLayout:
                                id: summary_box
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height

                        # Activity Section  
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: 0.48, None
                            height: 280
                            padding: [20, 20, 20, 20]
                            spacing: 10
                            canvas.before:
                                Color:
                                    rgba: 1, 0.98, 0.95, 0.95
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [12]
    
                            BoxLayout:
                                id: activity_box
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 420
                    padding: [20, 10, 20, 20]
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [12]
                    
                    Label:
                        text: "Weather Parameters"
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 30
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    GridLayout:
                        id: card_grid
                        cols: 2
                        rows: 2
                        spacing: 10
                        size_hint_y: None
                        height: 350
                        
                        WeatherParamCard:
                            id: card1
                        
                        WeatherParamCard:
                            id: card2
                        
                        WeatherParamCard:
                            id: card3
                        
                        WeatherParamCard:
                            id: card4
                        
                        WeatherParamCard:
                            id: card5
                        
                        WeatherParamCard:
                            id: card6
                
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 450
                    padding: 20
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [12]
                    
                    Label:
                        text: "Weather Trend ±3 Days"
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 35
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    BoxLayout:
                        id: graph_box
                        orientation: 'vertical'
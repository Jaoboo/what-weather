#:kivy 2.0

<WeatherCard>:
    orientation: 'vertical'
    padding: 20
    spacing: 8
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 25
        
        Label:
            text: f"[b]{root.title_text}[/b]"
            markup: True
            font_size: '16sp'
            halign: 'left'
            valign: 'middle'
            color: 0.2, 0.2, 0.2, 1
            text_size: self.size
    
    Label:
        text: f"[size=36sp][b]{root.value_text}[/b][/size]"
        markup: True
        size_hint_y: None
        height: 60
        halign: 'center'
        valign: 'middle'
        color: root.value_color
    
    Label:
        text: root.subtitle_text
        markup: True
        font_size: '12sp'
        size_hint_y: None
        height: 20
        halign: 'center'
        valign: 'middle'
        color: 0.5, 0.5, 0.5, 1

<FormContentFrame>:
    orientation: 'vertical'
    padding: 25
    spacing: 15
    size_hint_y: None
    height: 400

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.97, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
        Color:
            rgba: 0.85, 0.85, 0.87, 1
        Line:
            rounded_rectangle: self.x, self.y, self.width, self.height, 15
            width: 1.5

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        size_hint_y: None
        height: 70
        
        Label:
            text: "Location"
            size_hint_y: None
            height: 25
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '14sp'
            color: 0.3, 0.3, 0.3, 1
            bold: True
        
        DarkTextInput:
            id: location_input
            hint_text: "e.g., Bangkok, New York, Tokyo"
            size_hint_y: None
            height: 45
            multiline: False
            font_size: '16sp'
            padding: [15, (self.height - self.line_height) / 2]
            foreground_color: 0.15, 0.15, 0.15, 1
            cursor_color: 0.2, 0.6, 1, 1
            hint_text_color: 0.7, 0.7, 0.7, 1
            background_normal: ''
            background_active: ''
            selection_color: 0.2, 0.6, 1, 0.3
            bold: True
            input_filter: lambda text, from_undo: text if all(ord(c) < 128 for c in text) else ''
            on_text: app.root.get_screen('main').on_location_input_change(self.text)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [8]
                Color:
                    rgba: (0.2, 0.6, 1, 1) if self.focus else (0.85, 0.85, 0.87, 1)
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 8
                    width: 2 if self.focus else 1

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        size_hint_y: None
        height: 70
        
        Label:
            text: "Target Date"
            size_hint_y: None
            height: 25
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '14sp'
            color: 0.3, 0.3, 0.3, 1
            bold: True
        
        DarkTextInput:
            id: date_input
            hint_text: "YYYY-MM-DD (e.g., 2025-12-31)"
            multiline: False
            size_hint_y: None
            height: 45
            font_size: '16sp'
            padding: [15, (self.height - self.line_height) / 2]
            foreground_color: 0.2, 0.2, 0.2, 1
            cursor_color: 0.2, 0.6, 1, 1
            hint_text_color: 0.65, 0.65, 0.65, 1
            background_normal: ''
            background_active: ''
            selection_color: 0.2, 0.6, 1, 0.3
            bold: True
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [8]
                Color:
                    rgba: (0.2, 0.6, 1, 1) if self.focus else (0.85, 0.85, 0.87, 1)
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 8
                    width: 2 if self.focus else 1
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        size_hint_y: None
        height: 140
        
        Label:
            text: "Additional Parameters (Select 2)"
            size_hint_y: None
            height: 25
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            font_size: '14sp'
            color: 0.3, 0.3, 0.3, 1
            bold: True
        
        GridLayout:
            cols: 2
            spacing: 10
            size_hint_y: None
            height: 110
            padding: [10, 5]
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
                CheckBox:
                    id: cb_humidity
                    size_hint: None, None
                    size: 25, 25
                    color: 0.2, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'RH2M')
                Label:
                    text: "Humidity"
                    font_size: '13sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
                CheckBox:
                    id: cb_pressure
                    size_hint: None, None
                    size: 25, 25
                    color: 0.2, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'PS')
                Label:
                    text: "Pressure"
                    font_size: '13sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
                CheckBox:
                    id: cb_cloud
                    size_hint: None, None
                    size: 25, 25
                    color: 0.2, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'CLOUD_AMT')
                Label:
                    text: "Cloud Cover"
                    font_size: '13sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 8
                CheckBox:
                    id: cb_solar
                    size_hint: None, None
                    size: 25, 25
                    color: 0.2, 0.6, 1, 1
                    on_active: app.root.get_screen('main').on_checkbox_change(self, 'ALLSKY_SFC_SW_DWN')
                Label:
                    text: "Solar Radiation"
                    font_size: '13sp'
                    color: 0.3, 0.3, 0.3, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size

<FormFrame>:
    orientation: 'vertical'
    spacing: 0
    
    FormContentFrame:
        id: form_content
        
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        size_hint_y: None
        height: 60
        padding: [0, 10, 0, 0]
        
        Button:
            id: start_button
            text: "START"
            size_hint: None, None
            size: 120, 45
            font_size: '16sp'
            bold: True
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_release: app.root.get_screen('main').on_start_button_press()
            canvas.before:
                Color:
                    rgba: (0.2, 0.6, 1, 1) if self.state == 'normal' else (0.15, 0.5, 0.9, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

<DescriptionScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 25

        Widget:
            size_hint_y: 0.15

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 120
            spacing: 10
            
            Label:
                text: "WHATWEATHER"
                font_size: '52sp'
                size_hint_y: None
                height: 60
                bold: True
                color: 0.2, 0.6, 1, 1
                halign: 'center'
                valign: 'middle'
            
            Label:
                text: "Weather Predict System"
                font_size: '20sp'
                size_hint_y: None
                height: 40
                color: 0.4, 0.4, 0.4, 1
                halign: 'center'
                valign: 'middle'
            
            Widget:
                size_hint_y: None
                height: 40

        Button:
            text: "GET STARTED"
            size_hint: None, None
            size: 250, 65
            pos_hint: {"center_x": 0.5}
            font_size: '20sp'
            bold: True
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_release: root.go_to_main()
            canvas.before:
                Color:
                    rgba: (0.2, 0.6, 1, 1) if self.state == 'normal' else (0.15, 0.5, 0.9, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]

        Widget:
            size_hint_y: 0.15

<MainFormScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 15
        
        BoxLayout:
            size_hint_y: None
            height: 80
            
            Label:
                text: "WHATWEATHER"
                font_size: '38sp'
                bold: True
                color: 0.2, 0.6, 1, 1
                halign: 'center'
                valign: 'middle'
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.45
                
                FormFrame:
                    id: form_frame
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.55
                spacing: 10
                BoxLayout:
                    id: map_container
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.95, 0.97, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]
                        Color:
                            rgba: 0.85, 0.85, 0.87, 1
                        Line:
                            rounded_rectangle: self.x, self.y, self.width, self.height, 15
                            width: 1.5

<LoadingScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            size_hint_y: 0.35
        
        Label:
            text: "WHATWEATHER"
            font_size: '60sp'
            bold: True
            color: 0.2, 0.6, 1, 1
            size_hint_y: None
            height: 70
            halign: 'center'
            valign: 'middle'
        
        BoxLayout:
            size_hint_y: None
            height: 250
            padding: 20
            
            BoxLayout:
                size_hint_x: 0.3
            
            AsyncImage:
                source: 'LOAD.gif'
                size_hint: None, None
                size: 150, 150
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                anim_delay: 0.05
                allow_stretch: True
                keep_ratio: True
            
            BoxLayout:
                size_hint_x: 0.3
        
        Label:
            text: "Analyzing weather data...\nPlease wait"
            font_size: '18sp'
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 80
            halign: 'center'
            valign: 'middle'
        
        BoxLayout:
            size_hint_y: 0.35

<ResultScreen>:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        
        # Header Section - ด้านบน
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: [20, 10, 20, 10]
            spacing: 15
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: "WHATWEATHER"
                font_size: '28sp'
                bold: True
                color: 0.2, 0.6, 1, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                size_hint_x: 0.5
            
            Widget:
                size_hint_x: 0.2
            
            Button:
                text: "New Predict"
                size_hint: None, None
                size: 130, 45
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 0.2, 0.6, 1, 1
                font_size: '13sp'
                bold: True
                on_release: root.manager.current = "main"
                canvas.before:
                    Color:
                        rgba: (0.9, 0.9, 0.92, 1) if self.state == 'normal' else (0.85, 0.85, 0.87, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8]
            
            Button:
                text: "Download CSV"
                size_hint: None, None
                size: 140, 45
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                font_size: '13sp'
                bold: True
                on_release: root.download_csv()
                canvas.before:
                    Color:
                        rgba: (0.2, 0.6, 1, 1) if self.state == 'normal' else (0.15, 0.5, 0.9, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8]
        
        # ScrollView Content
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                padding: [30, 20, 30, 30]
                size_hint_y: None
                height: self.minimum_height
                
                # Location & Date Section
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 90
                    spacing: 5
                    
                    Label:
                        text: "Location"
                        font_size: '14sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.4, 0.4, 0.4, 1
                    
                    Label:
                        id: location_value
                        text: ""
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 30
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    Label:
                        text: "Date"
                        font_size: '14sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.4, 0.4, 0.4, 1
                    
                    Label:
                        id: date_value
                        text: ""
                        font_size: '18sp'
                        size_hint_y: None
                        height: 25
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.2, 0.6, 1, 1
                
                # Summary & Activities Section
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 250
                    spacing: 20
                    
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 20
                        spacing: 10
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.97, 1, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [12]
                        
                        Label:
                            text: "Summary"
                            font_size: '18sp'
                            bold: True
                            size_hint_y: None
                            height: 30
                            halign: 'left'
                            valign: 'top'
                            text_size: self.size
                            color: 0.2, 0.2, 0.2, 1
                        
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            
                            BoxLayout:
                                id: summary_box
                                orientation: 'vertical'
                                spacing: 8
                                size_hint_y: None
                                height: self.minimum_height
                                padding: [5, 5]
                    
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 20
                        spacing: 10
                        canvas.before:
                            Color:
                                rgba: 1, 0.98, 0.95, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [12]
                        
                        Label:
                            text: "Activity Recommendations"
                            font_size: '18sp'
                            bold: True
                            size_hint_y: None
                            height: 30
                            halign: 'left'
                            valign: 'top'
                            text_size: self.size
                            color: 0.6, 0.3, 0.1, 1
                        
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            
                            BoxLayout:
                                id: outdoor_activities_box
                                orientation: 'vertical'
                                spacing: 8
                                size_hint_y: None
                                height: self.minimum_height
                                padding: [5, 5]
                
                # Map Section
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 350
                    padding: 20
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 0.95, 0.97, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [12]
                    
                    Label:
                        text: "Map"
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 35
                        halign: 'left'
                        valign: 'top'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    BoxLayout:
                        id: map_box
                        canvas.before:
                            Color:
                                rgba: 0.9, 0.92, 0.95, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8]
                        
                        Label:
                            text: "[Map will be displayed here]"
                            font_size: '16sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.5, 0.5, 0.5, 1
                
                # Weather Data Table (Single box with 2 sections)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 460
                    padding: 20
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [12]
                    
                    # Main Title
                    Label:
                        text: "Weather Parameters"
                        font_size: '20sp'
                        bold: True
                        size_hint_y: None
                        height: 35
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                    
                    # Table Header
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 35
                        spacing: 5
                        canvas.before:
                            Color:
                                rgba: 0.2, 0.6, 1, 0.15
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]
                        
                        Label:
                            text: "Parameter"
                            font_size: '14sp'
                            bold: True
                            halign: 'center'
                            valign: 'middle'
                            color: 0.2, 0.2, 0.2, 1
                        
                        Label:
                            text: "Value"
                            font_size: '14sp'
                            bold: True
                            halign: 'center'
                            valign: 'middle'
                            color: 0.2, 0.2, 0.2, 1
                        
                        Label:
                            text: "Status"
                            font_size: '14sp'
                            bold: True
                            halign: 'center'
                            valign: 'middle'
                            color: 0.2, 0.2, 0.2, 1
                    
                    # Row 1
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 35
                        spacing: 5
                        canvas.before:
                            Color:
                                rgba: 0.98, 0.98, 0.98, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]
                        
                        Label:
                            id: table1_row1_col1
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table1_row1_col2
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table1_row1_col3
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                    
                    # Row 2
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 35
                        spacing: 5
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]
                        
                        Label:
                            id: table1_row2_col1
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table1_row2_col2
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table1_row2_col3
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                    
                    # Divider
                    Widget:
                        size_hint_y: None
                        height: 20
                        canvas.before:
                            Color:
                                rgba: 0.85, 0.85, 0.85, 1
                            Rectangle:
                                pos: self.x, self.center_y
                                size: self.width, 1
                    
                    # Row 3
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 35
                        spacing: 5
                        canvas.before:
                            Color:
                                rgba: 0.98, 0.98, 0.98, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]
                        
                        Label:
                            id: table2_row1_col1
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table2_row1_col2
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                        
                        Label:
                            id: table2_row1_col3
                            text: "-"
                            font_size: '13sp'
                            halign: 'center'
                            valign: 'middle'
                            color: 0.3, 0.3, 0.3, 1
                    
                    # Row 4
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 35
                        spacing: 5
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6]
                        
